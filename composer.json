{
    "name": "webtopay/libwebtopay",
    "description": "PHP Library for Paysera payment gateway integration",
    "version": "2.1.0",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Paysera",
            "homepage": "https://www.paysera.com/"
        }
    ],
    "autoload": {
        "classmap": ["src/"]
    },
    "require": {
        "php": ">=7.4",
        "ext-simplexml": "*",
        "ext-openssl": "*",
      "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.38",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "scripts": {
        "phpunit": "php -dpcov.enabled=1 ./vendor/phpunit/phpunit/phpunit tests --coverage-html=coverage"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
